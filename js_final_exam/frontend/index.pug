extends ./layout

//- mixins
include ./slider/index
include ./partners/index

block title
  title= pageTitle

block content

  //- header
  include ./header/index

  main
    .container
      section.wrapper
        .section__title How Urlaubsgl√ºck works?
        .col-1-3
          #carousel1.owl-carousel
            +Slider(slider1_data)
        .col-1-3
          #carousel2.owl-carousel
            +Slider(slider2_data)
        .col-1-3
          #carousel3.owl-carousel
            +Slider(slider3_data)

      section.wrapper
        .section__title Meet a partner for your best holiday
        +Partners(partners_data)
        .section__title With different-sized pictures testing
        +Partners(partners_data_test)
        .section__title
          button.button--transparent--red.button--md See other partners

        .section__title Discover holiday activity ideas
        .grid
          .grid-sizer
          .gutter-sizer
          .grid-item
            img(src='dist/img/grid/Layer-10.jpg')
          .grid-item
            img(src='dist/img/grid/Layer-11.jpg')
          .grid-item
            img(src='dist/img/grid/Layer-12.jpg')
          .grid-item
            img(src='dist/img/grid/Layer-13.jpg')
          .grid-item.grid-item--width2
            img(src='dist/img/grid/Layer-14.jpg')
          .grid-item.grid-item--width2
            img(src='dist/img/grid/Layer-15.jpg')
          .grid-item
            img(src='dist/img/grid/Layer-16.jpg')

        .section__title Discover holiday activity ideas
        .center
          p Hi! What are your holiday interests?
          form#pixplorer
            input(type='text' placeholder='Enter your interests')
            button.button--red.button--md(type='submit') Search partners
          #gallery

  //- footer
  include ./footer/index
